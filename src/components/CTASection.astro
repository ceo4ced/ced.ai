---
interface Props {
    label?: string;
    title: string;
    description: string;
    buttonText?: string;
    buttonHref?: string;
}

const {
    label = 'Ready?',
    title,
    description,
    buttonText = 'Get in Touch',
    buttonHref = '/contact'
} = Astro.props;
---

<section class="cta-section">
    <div class="cta-box">
        <p class="section-label">{label}</p>
        <h2>{title}</h2>
        <p>{description}</p>
        <a href={buttonHref} class="btn btn-primary">{buttonText}</a>
    </div>
</section>
