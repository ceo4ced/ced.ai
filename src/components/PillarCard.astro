---
interface Props {
    icon: string;
    title: string;
    description: string;
    color: string;
    href?: string;
}

const { icon, title, description, color, href } = Astro.props;
const Tag = href ? 'a' : 'article';
---

<Tag href={href} class="pillar" style={`--pillar-color: ${color}`}>
    <span class="icon">{icon}</span>
    <h3>{title}</h3>
    <p>{description}</p>
    {href && <span class="pillar-link">Learn more &rarr;</span>}
</Tag>

<style>
    .pillar {
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 32px;
        transition: all 0.3s ease;
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .pillar:hover {
        border-color: var(--pillar-color);
        transform: translateY(-4px);
    }

    .icon {
        font-family: 'JetBrains Mono', monospace;
        font-size: 14px;
        font-weight: 600;
        display: inline-block;
        padding: 8px 12px;
        border-radius: 8px;
        margin-bottom: 20px;
        background: color-mix(in srgb, var(--pillar-color) 15%, transparent);
        color: var(--pillar-color);
    }

    h3 {
        font-family: 'EB Garamond', serif;
        font-size: 24px;
        font-weight: 500;
        margin-bottom: 12px;
    }

    p {
        font-size: 15px;
        color: var(--text-secondary);
        line-height: 1.7;
    }

    .pillar-link {
        display: inline-block;
        margin-top: 16px;
        font-size: 14px;
        font-weight: 600;
        color: var(--pillar-color);
        transition: opacity 0.2s ease;
    }

    .pillar:hover .pillar-link {
        opacity: 0.8;
    }
</style>
